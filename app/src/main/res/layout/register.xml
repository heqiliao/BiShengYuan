        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/register"
        android:layout_marginTop="39dp"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/regist_confirm_password_status"
        android:layout_alignLeft="@+id/regist_confirm_password_status"
        android:layout_alignStart="@+id/regist_confirm_password_status"

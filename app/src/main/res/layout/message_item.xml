<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/zhaopian" />
    <TextView
        android:id="@+id/tongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知消息"
        android:layout_alignTop="@+id/zhaopian"
        android:layout_toRightOf="@+id/zhaopian" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/tongzhi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/riqi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/zhaopian"
        android:layout_below="@+id/tongzhi"
        android:layout_marginTop="@dimen/badp"

        android:maxLines="2"
        android:id="@+id/content" />

</RelativeLayout>
